{% extends 'base.html.twig' %}

{% block title %}Email{% endblock %}

{% block body %}
    <h1>Email</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ email.id }}</td>
            </tr>
            <tr>
                <th>Sender</th>
                <td>{{ email.sender }}</td>
            </tr>
            <tr>
                <th>Recipient</th>
                <td>{{ email.recipient }}</td>
            </tr>
            <tr>
                <th>Page</th>
                <td>{{ email.page }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ email.content }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ email.created ? email.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('email_index') }}">back to list</a>

    <a href="{{ path('email_edit', {'id': email.id}) }}">edit</a>

    {{ include('email/_delete_form.html.twig') }}
