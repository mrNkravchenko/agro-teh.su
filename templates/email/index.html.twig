{% extends 'base.html.twig' %}

{% block title %}Email index{% endblock %}

{% block body %}
    <h1>Email index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sender</th>
                <th>Recipient</th>
                <th>Page</th>
                <th>Content</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for email in emails %}
            <tr>
                <td>{{ email.id }}</td>
                <td>{{ email.sender }}</td>
                <td>{{ email.recipient }}</td>
                <td>{{ email.page }}</td>
                <td>{{ email.content }}</td>
                <td>{{ email.created ? email.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('email_show', {'id': email.id}) }}">show</a>
                    <a href="{{ path('email_edit', {'id': email.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('email_new') }}">Create new</a>
{% endblock %}
