{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Region</th>
                <th>Region_index</th>
                <th>City</th>
                <th>District</th>
                <th>Street</th>
                <th>Building</th>
                <th>Zip</th>
                <th>Coordinate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.region }}</td>
                <td>{{ address.regionIndex }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.district }}</td>
                <td>{{ address.street }}</td>
                <td>{{ address.building }}</td>
                <td>{{ address.zip }}</td>
                <td>{{ address.coordinate }}</td>
                <td>
                    <a href="{{ path('address_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('address_new') }}">Create new</a>
{% endblock %}
