{% extends 'base.html.twig' %}

{% block title %}TechImage index{% endblock %}

{% block content %}
    <div class="col-12">
        <h1>TechImage index</h1>

        <a class="btn btn-sm btn-primary mb-2" href="{{ path('tech_image_new') }}">Создать</a>

        <table class="table table-responsive">
            <thead>
            <tr>
                <th>Id</th>
                <th>Path</th>
                <th>Created</th>
                <th>Is_slider</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for tech_image in tech_images %}
                <tr>
                    <td>{{ tech_image.id }}</td>
                    <td>{{ tech_image.path }}</td>
                    <td>{{ tech_image.created ? tech_image.created|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ tech_image.isSlider ? 'Yes' : 'No' }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm mb-2" href="{{ path('tech_image_show', {'id': tech_image.id}) }}"><i class="fa fa-eye"></i></a>
                        <a class="btn btn-primary btn-sm mb-2" href="{{ path('tech_image_edit', {'id': tech_image.id}) }}"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
