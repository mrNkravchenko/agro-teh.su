{% extends 'base.html.twig' %}
{% block title %}
    Агроному на заметку
{% endblock %}
{% block h1 %}
    <h1 class="text-center bg-primary text-white line-height-18 my-3">
        Агроному на заметку
    </h1>
{% endblock %}
{% block content %}
    <div class="row m-0 pb-3 justify-content-around">
        {% for article in articles  %}
            <div class="col-md-4 pt-3">
                <article class="card border-0 px-3 articleIndex bg-transparent">
                    <div class="more-info bg-white px-3">
                        <div class="">
                            <p class="card-text">
                                {{ article.description }}
                            </p>
                            <p class="card-text">
                                <a href="{{ path('articles_show', {'id' : article.id}) }}">Читать далее</a>
                            </p>
                        </div>
                    </div>
                    <a href="{{ path('articles_show', {'id' : article.id}) }}">
                        <img src="{{ asset(article.image) }}" class="card-img-top" alt="{{ article.name }}">
                    </a>

                    <div class="card-body mt-3">
                        <h4 class="card-title text-center">
                            {{ article.name }}
                        </h4>
                    </div>
                </article>
            </div>

        {% endfor %}
    </div>

{% endblock %}
