{% extends 'base.html.twig' %}

{% block title %}Dimensions index{% endblock %}

{% block body %}
    <h1>Dimensions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Width</th>
                <th>Height</th>
                <th>Length</th>
                <th>Volume</th>
                <th>Weight</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dimension in dimensions %}
            <tr>
                <td>{{ dimension.id }}</td>
                <td>{{ dimension.width }}</td>
                <td>{{ dimension.height }}</td>
                <td>{{ dimension.length }}</td>
                <td>{{ dimension.volume }}</td>
                <td>{{ dimension.weight }}</td>
                <td>
                    <a href="{{ path('dimensions_show', {'id': dimension.id}) }}">show</a>
                    <a href="{{ path('dimensions_edit', {'id': dimension.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dimensions_new') }}">Create new</a>
{% endblock %}
